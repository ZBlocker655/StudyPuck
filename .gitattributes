# Set default behavior to automatically normalize line endings
* text=auto

# Force LF line endings on checkout for these file types
*.js text eol=lf
*.ts text eol=lf
*.json text eol=lf
*.svelte text eol=lf
*.html text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.sh text eol=lf

# Ensure these config files use LF
.gitignore text eol=lf
.gitattributes text eol=lf
.npmrc text eol=lf
package.json text eol=lf
pnpm-lock.yaml text eol=lf
turbo.json text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary