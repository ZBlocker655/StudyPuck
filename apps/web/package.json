{
	"name": "web",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"dev:workers": "pnpm build && wrangler pages dev .svelte-kit/cloudflare --compatibility-date=2024-01-01",
		"build": "svelte-kit sync && vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"check-types": "tsc --noEmit",
		"lint": "svelte-check --tsconfig ./tsconfig.json",
		"db:generate": "pnpm -F database migrate:generate",
		"db:migrate": "pnpm -F database migrate:apply",
		"db:studio": "pnpm -F database migrate:studio",
		"db:push": "pnpm -F database migrate:push",
		"db:drop": "pnpm -F database migrate:drop",
		"db:check": "pnpm -F database migrate:check"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/adapter-cloudflare": "^7.2.4",
		"@sveltejs/adapter-static": "^3.0.10",
		"@sveltejs/kit": "^2.49.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@types/node": "^25.0.3",
		"svelte": "^5.45.6",
		"svelte-check": "^4.3.4",
		"typescript": "^5.9.3",
		"vite": "^7.2.6",
		"wrangler": "^4.58.0"
	},
	"dependencies": {
		"@auth/core": "^0.41.1",
		"@auth/sveltekit": "^1.11.1",
		"zod": "^4.2.1"
	}
}
